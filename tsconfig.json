{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      // 让ts识别的绝对路径
      "@assets/*": ["src/assets/*"],
      "@components": ["src/components/"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@pages/*": ["src/pages/*"],
      "@style/*": ["src/style/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@hooks": ["src/hooks/"],
      "@hooks/*": ["src/hooks/*"],
      "@typers/*": ["src/types/*"],
      "@data/*": ["src/data/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
